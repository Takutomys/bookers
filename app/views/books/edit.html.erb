<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>

      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model:@book, local: true do |f| %>
<P>Title</P>
<%= f.text_field :title %>

<P>Body</P>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>

<P><%= link_to 'show', book_path(@book.id) %> | <%= link_to 'Back', books_path  %></P>

<% end %>